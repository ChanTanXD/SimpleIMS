<UserControl x:Class="INV_MGMT_SYS.DisplayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:INV_MGMT_SYS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Search by: " />
            <ComboBox ItemsSource="{Binding Path=SearchCategoryBox}"
                      DisplayMemberPath="val"
                      SelectedValuePath="val"
                      SelectedValue="{Binding Path=SearchCategoryVal}"/>
            <TextBox TextWrapping="Wrap" Text="{Binding SearchValBox}" Width="120"/>
            <Button Content="Search" Command="{Binding SearchCommand}"/>
            <Button Content="Edit" Command="{Binding EditCommand}"/>
            <Button Content="Delete" Command="{Binding DeleteCommand}"/>
            <TextBlock Text="Row deleted" Visibility="{Binding IsDeleted, UpdateSourceTrigger=PropertyChanged}" Foreground="#FFF119DF" FontSize="20" FontWeight="Bold"/>
        </StackPanel>
        <DataGrid Height="100" AutoGenerateColumns="False" SelectionChanged="DataGrid_SelectionChanged" IsReadOnly="True"
                  ItemsSource="{Binding AirconList, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}"
                  SelectedItem="{Binding SelectedRow, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding id, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Model" Binding="{Binding model, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Brand" Binding="{Binding brand, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="HP" Binding="{Binding hp, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Series" Binding="{Binding series, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Price" Binding="{Binding price, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding stock, UpdateSourceTrigger=PropertyChanged}"/>
                <DataGridTextColumn Header="Link" Binding="{Binding catalogueLink, UpdateSourceTrigger=PropertyChanged}"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
